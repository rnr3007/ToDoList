<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ToDoList.Views.Shared.Sidebar">
    <StackPanel Classes="side-nav-bar">
        <Border Classes="side-nav-btn" Tapped="GoToHome" x:Name="HomeNav">
            <TextBlock>Home</TextBlock>
        </Border>
        <Border Classes="side-nav-btn" Tapped="GoToListOfToDo" x:Name="ToDoListNav">
            <TextBlock>To Do List</TextBlock>
        </Border>
    </StackPanel>
</UserControl>
